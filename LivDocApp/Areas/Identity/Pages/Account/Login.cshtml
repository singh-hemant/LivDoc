@page
@model LoginModel

@{
    ViewData["Title"] = "LOGIN";
}


    <style>
        h2 {
            text-align: center;
            margin-bottom: 20px;
            color: #800080;
        }

        label {
            display: block;
            margin-bottom: 10px;
            color: #800080;
        }

        input[type="text"], input[type="password"], input[type="submit"] {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            box-sizing: border-box;
            border: 1px solid #dda0dd;
            border-radius: 4px;
            font-size: 16px;
        }

        input[type="submit"] {
            background-color: #800080;
            color: #fff;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            input[type="submit"]:hover {
                background-color: #4b0082;
            }

        .form-footer {
            margin-top: 15px;
            text-align: center;
        }

            .form-footer a {
                color: #800080;
                text-decoration: none;
            }

                .form-footer a:hover {
                    text-decoration: underline;
                }

        .remember-me {
            margin-bottom: 15px;
            color: #800080;
        }
    </style>
